    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'path_finder'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=path_finder"
                ],
                "filter": {
                    "name": "path_finder",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'path_finder'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=path_finder",
                    "--package=path_finder"
                ],
                "filter": {
                    "name": "path_finder",
                    "kind": "bin"
                }
            },
            "args": [
                "testmap.txt",
                "0",
                "0",
                "14",
                "19",
                "-a2"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'path_finder'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=path_finder",
                    "--package=path_finder"
                ],
                "filter": {
                    "name": "path_finder",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}